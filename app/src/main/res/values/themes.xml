<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.ZakatCalculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <!-- Toolbar Style -->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primaryColor</item> <!-- Match toolbar background to primary color -->
        <item name="android:titleTextColor">@android:color/white</item> <!-- Title text color -->
    </style>

    <!-- Application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Day Mode Theme -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <!-- Popup Menu Theme for Light Mode -->
    <style name="PopupMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">#000000</item> <!-- Black text for light mode -->
        <item name="android:background">#FFFFFF</item> <!-- White background for light mode -->
    </style>

    <!-- Main Application Theme -->
    <style name="Theme.ZakatCalculator" parent="Base.Theme.ZakatCalculator" />

</resources>
